print("TASK 1:")
from datetime import date
today = date.today()
today = today.strftime("%B, %d")
name = "Alexandr"
print("Good day,", name, "!", today, "is a perfect day to learn some python!")

print("\nTASK 2:")
first_name = "Anton"
last_name = "Tkachuk"
full_name = first_name + " " + last_name
print("My name is ", full_name, ".", "I'm glad to see you!")


print("\nTASK 3:")
a = 8
b = 6
print(f'{a} + {b} = {a + b}') #addition
print(f'{a} - {b} = {a - b}') #substraction
print(f'{a} / {b} = {a / b}') #division
print(f'{a} * {b} = {a * b}') #multiplication
print(f'{a} ** {b} = {a ** b}') #exponent(power)
print(f'{a} % {b} = {a % b}') #modulo
print(f'{a} // {b} = {a // b}') #floor division