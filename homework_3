print("\nTASK 2")

while True:
    number = input("Please, enter your number: ")
    if(number.isdigit()) and len(number) == 10:
        print("Congratulations! Your number has been received.")
        break
    elif(number.isalpha()):
        print("Please, use only numeral charachters. Try again.")
    elif(int(number) != 10):
        print("You have entered less or more than 10 numeral charachters. Try again.")

        

